{
	"env": {
		"node": true,
		"es2021": true,
		"browser": true
	},
	"plugins": ["jest", "babel", "prettier"],
	"extends": [
		"airbnb-base",
		"plugin:jest/recommended",
		"plugin:prettier/recommended",
		"prettier"
	],
	"parser": "babel-eslint",
	"rules": {
		"prettier/prettier": ["error", {}, {
			"usePrettierrc": true
		}],
		"arrow-body-style": "off",
		"prefer-arrow-callback": "off",
		"quotes": ["error", "single"],
		"no-console": 0,
		"import/extensions": 0,
		"no-underscore-dangle": [2, { "allow": ["__filename", "__dirname"] }]
	}
}
